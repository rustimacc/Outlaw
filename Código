		vaquero3[6][0]=0;vaquero3[6][1]=0;vaquero3[6][2]=0;vaquero3[6][3]=219;vaquero3[6][4]=219;vaquero3[6][5]=219;vaquero3[6][6]=219;vaquero3[6][7]=219;vaquero3[6][8]=219;vaquero3[6][9]=0;
		vaquero3[7][0]=0;vaquero3[7][1]=0;vaquero3[7][2]=0;vaquero3[7][3]=0;vaquero3[7][4]=0;vaquero3[7][5]=219;vaquero3[7][6]=219;vaquero3[7][7]=0;vaquero3[7][8]=0;vaquero3[7][9]=0;
		vaquero3[8][0]=0;vaquero3[8][1]=0;vaquero3[8][2]=0;vaquero3[8][3]=0;vaquero3[8][4]=0;vaquero3[8][5]=219;vaquero3[8][6]=219;vaquero3[8][7]=0;vaquero3[8][8]=0;vaquero3[8][9]=0;
		vaquero3[9][0]=0;vaquero3[9][1]=220;vaquero3[9][2]=220;vaquero3[9][3]=0;vaquero3[9][4]=0;vaquero3[9][5]=219;vaquero3[9][6]=219;vaquero3[9][7]=0;vaquero3[9][8]=0;vaquero3[9][9]=0;
		vaquero3[10][0]=0;vaquero3[10][1]=219;vaquero3[10][2]=0;vaquero3[10][3]=223;vaquero3[10][4]=220;vaquero3[10][5]=219;vaquero3[10][6]=219;vaquero3[10][7]=0;vaquero3[10][8]=0;vaquero3[10][9]=0;
		vaquero3[11][0]=0;vaquero3[11][1]=0;vaquero3[11][2]=0;vaquero3[11][3]=0;vaquero3[11][4]=0;vaquero3[11][5]=0;vaquero3[11][6]=0;vaquero3[11][7]=0;vaquero3[11][8]=0;vaquero3[11][9]=0;
		
		break;
	}
	switch(dibujo){
		
		
	case 1:
		for(int j=0;j<12;j++){
			for(int i=0;i<10;i++){
				gotoxy(x+i,y+j);
				cout<<vaquero[j][i];
			}
			cout<<endl;
		}
		break;
	case 2:
		for(int j=0;j<11;j++){
			for(int i=0;i<10;i++){
				gotoxy(x+i,y+j);
				cout<<vaquero2[j][i];
			}
			cout<<endl;
		}
		break;
	case 3:
		for(int j=0;j<12;j++){
			for(int i=0;i<10;i++){
				gotoxy(x+i,y+j);
				cout<<vaquero3[j][i];
			}
			cout<<endl;
		}
		break;
	}
	
	
	textcolor(1);
	
}


///////////////////////////CLASE NPC

class npc: public cowboy{
	
private:
	
	int dire;
	int color;
	int forma;
public:
	npc(int direccion,int _color,int _forma);
	//int set_dir(){return dir=rand()%5+1;};
	//int get_dir(){return dir;};
	
	void movimiento(int dir);
	void mostrar(int x,int y,int dibujo);
	
	bool colision_bala(class bala &balita);
	
};

npc::npc(int direccion,int _color,int _forma){
	
	set_x(60);
	set_y(rand()%11+5);
		
	//dir=1;
	//set_vida();
	color=_color;
	forma=_forma;
}



void npc::movimiento(int dir){
	
	switch(dir){
		
	case 1://arriba
		if(pos_y>3){
			pos_y--;
		}
		break;
	case 2://abajo
		if(pos_y<17){
			pos_y++;
		}
		break;
		
	case 3://derecha
		if(pos_x>60){
			pos_x--;
		}
		break;
	case 4://izquierda
		if(pos_x<69){
			pos_x++;
		}
		break;
	}
	if(get_x()<=50){
		dir=3;
	}
	if(get_x()>=69){
		dir=1;
	}
	if(get_y()<=3){
		if(dir==1){
			dir=4;
		}
		else{
			dir=2;
		}
	}
	if(get_y()>=17){
		dir=1;
	}
	
	
	
}

