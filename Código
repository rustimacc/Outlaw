					vaquero1[8][0]=0;vaquero1[8][1]=0;vaquero1[8][2]=0;vaquero1[8][3]=219;vaquero1[8][4]=219;vaquero1[8][5]=219;vaquero1[8][6]=219;vaquero1[8][7]=0;vaquero1[8][8]=0;vaquero1[8][9]=0;
