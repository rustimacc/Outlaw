				}
				if(cursor_y==21){
					color_npc=14;
					forma_npc=2;
					vaquero1[0][0]=0;vaquero1[0][1]=0;vaquero1[0][2]=0;vaquero1[0][3]=0;vaquero1[0][4]=0;vaquero1[0][5]=0;vaquero1[0][6]=0;vaquero1[0][7]=0;vaquero1[0][8]=0;vaquero1[0][9]=0;
					vaquero1[1][0]=0;vaquero1[1][1]=0;vaquero1[1][2]=0;vaquero1[1][3]=0;vaquero1[1][4]=219;vaquero1[1][5]=219;vaquero1[1][6]=0;vaquero1[1][7]=0;vaquero1[1][8]=0;vaquero1[1][9]=0;
					vaquero1[2][0]=0;vaquero1[2][1]=0;vaquero1[2][2]=0;vaquero1[2][3]=219;vaquero1[2][4]=219;vaquero1[2][5]=219;vaquero1[2][6]=219;vaquero1[2][7]=0;vaquero1[2][8]=0;vaquero1[2][9]=0;
					vaquero1[3][0]=0;vaquero1[3][1]=0;vaquero1[3][2]=0;vaquero1[3][3]=0;vaquero1[3][4]=219;vaquero1[3][5]=219;vaquero1[3][6]=0;vaquero1[3][7]=0;vaquero1[3][8]=0;vaquero1[3][9]=0;
					vaquero1[4][0]=0;vaquero1[4][1]=0;vaquero1[4][2]=219;vaquero1[4][3]=219;vaquero1[4][4]=219;vaquero1[4][5]=219;vaquero1[4][6]=219;vaquero1[4][7]=219;vaquero1[4][8]=0;vaquero1[4][9]=0;
					vaquero1[5][0]=0;vaquero1[5][1]=219;vaquero1[5][2]=0;vaquero1[5][3]=0;vaquero1[5][4]=219;vaquero1[5][5]=219;vaquero1[5][6]=0;vaquero1[5][7]=0;vaquero1[5][8]=219;vaquero1[5][9]=0;
					vaquero1[6][0]=0;vaquero1[6][1]=219;vaquero1[6][2]=0;vaquero1[6][3]=0;vaquero1[6][4]=219;vaquero1[6][5]=219;vaquero1[6][6]=0;vaquero1[6][7]=0;vaquero1[6][8]=219;vaquero1[6][9]=0;
