using namespace std;

///////////////////////////CLASE MADRE COWBOY

class cowboy{
	
private:	
	
	int vidas;	
	
protected:
	char vaquero[12][10];
	char vaquero2[12][10];
	char vaquero3[12][10];
	
	int pos_x;
	int pos_y;
public:
	
		
	virtual void mostrar(int x,int y,int forma);
	int vida(){return vidas;};
	//void set_vida(){vidas=3;};
	void danio(int life);
	virtual void movimiento(int dir);//mx y Mx marcan los limites para moverse en pantalla de cada personaje
	
	virtual int set_dir(){};
	virtual int get_dir(){};
	int set_x(int x){pos_x=x;};
	int set_y(int y){pos_y=y;};
	int get_x(){return pos_x;};
	int get_y(){return pos_y;};
	
	
};

void cowboy::mostrar(int x,int y,int forma){
	
		
}


void cowboy::danio(int life){
	
vidas=life;
	
}



void cowboy::movimiento(int dir){
	
	
}

/////////////////////////CLASE JUGADOR 

class jugador:virtual public  cowboy{
	
private:
	int color;
	int forma;
public:
	jugador(int _color,int _forma);
	//int get_x(){return pos_x;};
	//int get_y(){return pos_y;};
	void movimiento(int dir);
	void mostrar(int x,int y,int dibujo);
};

jugador::jugador(int _color,int _forma){
	
		
	pos_x=rand()%10+5;
	pos_y=rand()%11+5;
	
	//set_vida();
	color=_color;
	forma=_forma;
}

void jugador::movimiento(int dir){
	
	switch(dir){
		
	case 1://arriba
		if(pos_y>3){
			pos_y--;
		}
		break;
	case 2://abajo
		if(pos_y<17){
			pos_y++;
		}
		break;
		
	case 3://derecha
		if(pos_x>3){
			pos_x--;
		}
		break;
	case 4://izquierda
		if(pos_x<15){
			pos_x++;
		}
		break;
	}
	
}



